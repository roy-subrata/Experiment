<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Authentication Experiment</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarText">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Features</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Conatact</a>
                    </li>
                </ul>
                <span class="navbar-text">
                    @{ if (User.Identity.IsAuthenticated)
                        {

                            <a class="btn btn-primary btn-sm" asp-controller="auth" asp-action="logout">Logout</a>
                            <span>@User.Identity.Name</span>


                        }
                        else
                        {
                            <a class="btn btn-primary btn-sm" asp-controller="auth" asp-action="logout">Login</a>
                        }
                    }
                </span>
            </div>
        </nav>


    </header>
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
